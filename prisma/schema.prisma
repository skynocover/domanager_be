datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int?
}

model User {
  id       String @id
  password String
}

model Server {
  id             Int              @id @default(autoincrement())
  name           String           @unique
  domain         String?
  port           String?
  proxy          Proxy[]
  staticFile     StaticFile[]
  staticResponse StaticResponse[]
}

model Proxy {
  id       Int     @id @default(autoincrement())
  serverId Int
  Server   Server  @relation(fields: [serverId], references: [id])
  routes   String?
  target   String
}

model StaticFile {
  id       Int    @id @default(autoincrement())
  serverId Int
  Server   Server @relation(fields: [serverId], references: [id])
  routes   String
  target   String
}

model StaticResponse {
  id       Int    @id @default(autoincrement())
  serverId Int
  Server   Server @relation(fields: [serverId], references: [id])
  body     String
}
