datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id
  password String
}

model Server {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  domain   String?
  port     String    @default("80")
  handlers Handler[]
}

model Handler {
  id       Int     @id @default(autoincrement())
  serverId Int
  Server   Server  @relation(fields: [serverId], references: [id])
  type     String?
  routes   String?
  target   String?
}
